<h1><center>Greetings</center></h1>

<table>
  <thead>
    <tr>
      <th>List of Greeting</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @greets.each do |greet| %>
      <tr>
        <td><%= greet.greeting %></td>
        <td><%= link_to 'Show', greet %></td>
        <td><%= link_to 'Edit', edit_greet_path(greet) %></td>
        <td><%= link_to 'Destroy', greet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

