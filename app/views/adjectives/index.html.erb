<p id="notice"><%= notice %></p>

<h1><center>Adjectives</center></h1>

<table>
  <thead>
    <tr>
      <th>List of Cool Desciptive Adjectives</th>

      <th colspan="3"></th>
    </tr>
  </thead>


   <tbody>
    <% @adjectives.each do |adjective| %>

    <tr> 
        <td><%= adjective.description %></td>
        <td><%= link_to 'Show', adjective %></td>
        <td><%= link_to 'Edit', edit_adjective_path(adjective) %></td>
        <td><%= link_to 'Destroy', adjective, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr> 
   <% end %> 
  </tbody>
</table> 





<%= link_to '<button type="button">Click here to Add a New Adjective to the list</button>'.html_safe, new_adjective_path %>
