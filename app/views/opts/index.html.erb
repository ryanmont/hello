<p id="notice"><%= notice %></p>

<h1>Opts</h1>

<table>
  <thead>
    <tr>
      <th>Class</th>
      <th>User</th>
      <th>Adjective</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opts.each do |opt| %>
      <tr>
        <td><%= opt.class %></td>
        <td><%= opt.user %></td>
        <td><%= opt.adjective %></td>
        <td><%= link_to 'Show', opt %></td>
        <td><%= link_to 'Edit', edit_opt_path(opt) %></td>
        <td><%= link_to 'Destroy', opt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Opt', new_opt_path %>
